<?xml version="1.0"?>
<odoo>
     <record id="view_form_helpdesk" model="helpdesk.ticket">
        <field name="name">view.helpdesk_ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form string='Ticket'>
                <header>
                    <field name="name" widget='statusbar'/>
                </header>
                <sheet>
                    <div class='oetitle'>
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" />
                            <field name="date_limit" />
                        </group>
                        <group>
                            <field name="assigned" />
                            <field name="time" />
                        </group>
                    </group>
                    <notebook>
                        <page string='Description'>
                            <field name='description'/>
                        </page>
                        <page string='Quality'>
                           
                            <group>
                                <field name='action_corrective'/>
                            </group>
                            <group>
                                <field name='action_preventive'/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record> 
    <record id="view_helpdesk_ticket_tree" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
</odoo>