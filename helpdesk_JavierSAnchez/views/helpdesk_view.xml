<?xml version="1.0"?>
<odoo>
    <record id="view_form_helpdesk" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form string='Ticket'>
                <header>
                    <!--<field name="name" widget='statusbar'/>-->
                    <button name="asignar" type="object" string="asignado" class="btn-primary" states="asignado" />
                    <button name="proceso" type="object" string="proceso" class="btn-primary" states="proceso" />
                    <button name="pendiente" type="object" string="pendiente" class="btn-primary"  states="pendiente"/>
                    <button name="finalizar" type="object" string="resuelto" class="btn-primary" states="finalizado"/>
                    <button name="cancelar" type="object" string="cancelado" class="btn-primary" states="cancelado"/>
                    <!-- states para definir cuando se verÃ¡ -->
                </header>
                <sheet>
                    <div class='oetitle'>
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" />
                            <field name="date_limit" />
                            <field name="state" />
                        </group>
                        <group>
                            <field name="user_id" />
                            <field name="assigned" />
                            <field name="ticket_qty"/>
                            <field name="time" />
                        </group>
                    </group>
                    <notebook>
                        <page string='Description'>
                            <field name='description'/>
                            <group>
                                
                                    <field name="tag_name"/>
                                    <button string="create tag"
                                            name="create_tag"
                                            type="object"
                                    />
                            </group>
                            <field name='tag_ids'/>
                        </page>
                        <!--ACCIONES-->
                        <page string='Actions'>
                            <field name='action_ids'/>
                        </page>
                        <!---->
                        <page string='Quality'>
                            <group string='Corrective Action'>
                                <field name='action_corrective' nolabel='1'/>
                            </group>
                            <group string='Preventive Action'>
                                <field name='action_preventive' nolabel='1'/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_helpdesk_ticket_search" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.search</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <search string='Ticket'>
                <field name="name"/>
                <field name="user_id"/>
                <filter name='assigned' string="Assigned" domain="[('user_id', '!=', False)]"/>
                <filter name='date_limit' string="No date limit" domain="[('date_limit', '!=', False)]"/>
                <filter name='date_limit' string="Date limit" context="{'group_by':'date_limit'}"/>
                <filter string="Assigned to" name="user_id" context="{'group_by':'user_id'}"/>
            </search>
        </field>
    </record>

    <record id="view_helpdesk_ticket_pivot" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.graph</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            
                <pivot string="Ticket">
                    <field name="user_id" />
                    <field name="date" interval="month" type="col"/>
                    <field name="time" type="measure" widget="float_time"/>
                </pivot>
            
        </field>
    </record>


    <record id="view_helpdesk_ticket_calendar" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.calendar</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <calendar string="Tickets" date_start="date" color="user_id" hide_time="true" event_limit="5">
                <field name="user_id" avatar_field="image_128"/>
                <field name="name" />
                <field name="user_id" filters="1" invisible="1"/>
            </calendar>
        </field>
    </record>

